@model StoreApp.Models.Models.ReviewModel

<h3>Write a Review</h3>

<form asp-action="Create">
    <input type="hidden" asp-for="ProductId" />

    <label>Rating (1-5):</label>
    <input type="number" asp-for="Rating" min="1" max="5" required />

    <label>Review:</label>
    <textarea asp-for="Review" rows="3"></textarea>

    <button type="submit">Submit</button>
</form>
