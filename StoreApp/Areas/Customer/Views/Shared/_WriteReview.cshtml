@model ReviewViewModel

<h5 class="my-2">Dodaj recenzję</h5>
<form asp-action="Create" asp-controller="Reviews" method="post">
    <input value="@Model.Review.ProductId" type="hidden" name="productID" />

    <div class="mb-3">
        <label class="form-label">Ocena</label>
        <div class="d-flex flex-row">
            @for (int i = 1; i <= 5; i++)
            {
                <div class="form-check">
                    <input class="btn-check" type="radio" name="rating" value="@i" id="rating-@i" required>
                    <label class="btn btn-outline-secondary btn-sm" for="rating-@i">@i</label>
                </div>
            }
        </div>
    </div>

    <div class="mb-3">
        <input type="text" name="title" class="form-control form-control-sm" placeholder="Tytuł recenzji" />
    </div>

    <div class="mb-3">
        <textarea name="description" class="form-control form-control-sm" placeholder="Twoja opinia" rows="2"></textarea>
    </div>

    <button type="submit" class="btn btn-secondary btn-sm">Dodaj</button>
</form>