@using StoreApp.Models.ViewModels.IViewModel
@model IStoreFrontViewModel



@{
    Layout = "_Layout";
}


<div class="row my-4">
    <div class="col">
            <h1 class="display-4">Z-kom</h1>
    </div>
</div>
<div class="row">
    <div class="col-8">
        @RenderBody() <!-- The actual page content goes here -->
    </div>
    <aside class="col-3">
        <div class="card" style="width: 18rem;">
            <div class="card-header">
                Kategorie
            </div>
            <ul class="list-group list-group-flush">
                @foreach (var x in Model.CategoryList)
                {
                    <li class="list-group-item">
                        <a class="nav-link text-body text-decoration-none" asp-area="" asp-controller="Home" asp-action="Category" asp-route-categoryId="@x.Id">
                            @x.Name
                        </a>
                    </li>
                }
            </ul>
        </div>
    </aside>
</div>